# Meta/WhatsApp Credentials
client_id=YOUR_META_CLIENT_ID
client_secret=YOUR_META_CLIENT_SECRET

# AWS Credentials
# Necessarie per chiamare Bedrock da Lambda (anche in LocalStack)
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_DEFAULT_REGION=eu-west-1

# AWS Bedrock Knowledge Base
# ID della Knowledge Base per RAG (Retrieval Augmented Generation)
KNOWLEDGE_BASE_ID=YOUR_KB_ID

# LocalStack Configuration (for local development)
# Lascia vuoto per usare AWS reale, imposta per LocalStack
AWS_ENDPOINT_URL=http://localhost:4566

# DynamoDB Tables
WA_MESSAGES_TABLE=sidea-ai-clone-prod-messages-table
WA_SESSIONS_TABLE=sidea-ai-clone-prod-sessions-table
ROUTER_CONFIG_TABLE=sidea-ai-clone-prod-config-table

# S3 Buckets
WA_MEDIA_BUCKET_NAME=sidea-ai-clone-prod-wa-media-s3

# Step Function
ROUTER_WA_MESSAGE_PROCESSOR_SFN_ARN=arn:aws:states:eu-west-1:533267110337:stateMachine:sidea-ai-clone-prod-wa-message-processor-sfn

# WhatsApp Configuration
ROUTER_DEV_WA_IDS=393462454282

# Application
APP_ENV=local
LOG_LEVEL=debug

# ElevenLabs (Text-to-Speech)
# Gestito via AWS Secrets Manager in production
# ELEVENLABS_API_KEY=your_key_here
